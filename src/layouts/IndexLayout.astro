---
import { Button } from "@/components/ui/button";
import DefaultLayout from "@/layouts/DefaultLayout.astro";
const { title, header, subheader, subsubheader, btntext, link } = Astro.props;
---

<DefaultLayout title={title}>
  <div
    class="flex flex-col h-[75vh] text-center justify-center items-center pr-10 md:pr-0"
  >
    <div class="text-[5rem] font-bold neon-text">△_<span class="text-[4.5rem]">△</span></div>
    <h1 class="text-[#fff]">{subheader}</h1>
    <h3>{subsubheader}</h3>
    <br />
    <a href={link}>
      <Button><p class="text-xl">{btntext}</p></Button>
    </a>
  </div>
</DefaultLayout>

<style>
  .neon-text {
    text-shadow: 
      0 0 7px #fff,
      0 0 10px #fff,
      0 0 21px #fff,
      0 0 42px #0fa,
      0 0 82px #0fa,
      0 0 92px #0fa,
      0 0 102px #0fa,
      0 0 151px #0fa;
    animation: pulsate 1.5s infinite alternate;
  }

  @keyframes pulsate {
    100% {
      text-shadow: 
        0 0 4px #fff,
        0 0 11px #fff,
        0 0 19px #fff,
        0 0 40px #0fa,
        0 0 80px #0fa,
        0 0 90px #0fa,
        0 0 100px #0fa,
        0 0 150px #0fa;
    }
    0% {
      text-shadow: 
        0 0 2px #fff,
        0 0 4px #fff,
        0 0 6px #fff,
        0 0 10px #0fa,
        0 0 45px #0fa,
        0 0 55px #0fa,
        0 0 70px #0fa,
        0 0 80px #0fa;
    }
}
</style>
