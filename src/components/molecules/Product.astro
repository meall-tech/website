---
import {
  Card,
  CardContent,
  CardHeader,
  CardTitle,
  CardFooter,
} from "@/components/ui/card";
import LinkBtn from "@/components/atoms/LinkBtn.astro";
const { name, description, href, ctext, clink, date } =
  Astro.props;
---

<Card
  className="dark:hover:bg-zinc-800 hover:bg-zinc-300 dark:bg-zinc-900 bg-zinc-200"
>
  <CardHeader>
    <CardTitle>{name}</CardTitle>
  </CardHeader>
  <CardContent>
    <p>{description}</p>
    <p class="text-sm pt-2 text-zinc-600 dark:text-zinc-400">{date}</p>
    <br />
  </CardContent>
  <CardFooter>
    <LinkBtn
      className="ml-[-10px]"
      text="View on Github"
      href={href}
      size="base"
      target="_blank"
    />
    {ctext && <LinkBtn text={ctext} href={clink} size="base" target="_blank" />}
  </CardFooter>
</Card>
